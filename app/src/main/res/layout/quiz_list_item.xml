<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:contentPaddingTop="15dp"
    card_view:contentPaddingBottom="15dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardPreventCornerOverlap="true"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:stateListAnimator="@anim/raise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Guess the Language: Hello World"
                android:id="@+id/quizNameLabel"
                android:gravity="center_vertical|start"
                android:textColor="#FF000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Finish the snippet of code before time runs out."
                android:id="@+id/quizDescriptionLabel"
                android:gravity="center_vertical|start"
                android:textColor="#80000000"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="100"
            android:id="@+id/pointsWorthLabel"
            android:textColor="#60000000"
            android:textAllCaps="true"
            android:layout_weight="5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

